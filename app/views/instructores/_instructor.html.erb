<tr id=<%= "instructor_#{instructor.id}" %>>
  <td><%= link_to instructor.id, edit_instructor_path(instructor), :remote => true %></td>
  <td><%= instructor.nombres %></td>
  <td><%= instructor.cedula %></td>
  <td><%= instructor.email %></td>
  <td><%= instructor.direccion %></td>
  <td><%= instructor.telefono %></td>
  <td><%= instructor.fch_ncto %></td>
  <td><%= instructor.created_at %></td>
  <td><%= instructor.updated_at %></td>
  <td>
    <%= link_to image_tag('mostrar.png', :width=>30, :title=>'Mostrar'), instructor, :remote => true, :class => 'btn btn-success btn-mini' %>
    <%= link_to image_tag('editar.png', :width=>30, :title=>'Editar'), edit_instructor_path(instructor), :remote => true,
        :class => 'btn btn-mini' %>
    <%= link_to image_tag('eliminar.png', :width=>30, :title=>'Eliminar'), instructor, 
        :data => { :confirm => 'Esta Seguro?' },
        :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>