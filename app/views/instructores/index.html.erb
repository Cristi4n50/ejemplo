<%- model_class = Instructor -%>
<div class="page-header">
  <h1 class="titprincipal">Instructores</h1>
  <br>
  <hr>
  <%= form_tag request.path, :method => 'get' do %> 
   <%= content_tag :label do %> 
     Nombre Instructor: 
     <%= text_field_tag :search, params[:search] %> 
     <%= submit_tag "Consultar", :name => nil %> 
   <% end %> 
  <% end %>
</div>
<div class="well" id="tablas">
  <table class="table table-striped table-bordered table-condensed pretty">
    <thead>
      <tr>
          <th><%= sortable 'id' %></th>
          <th><%= sortable 'nombres' %></th>
          <th><%= sortable 'cedula' %></th>
          <th><%= sortable 'email' %></th>
          <th><%= sortable 'direccion' %></th>
          <th><%= sortable 'telefono' %></th>
          <th><%= sortable 'fch_ncto' %></th>
          <th><%= sortable 'modalidad' %></th>
          <th><%= sortable 'created_at' %></th>
          <th><%= sortable 'updated_at' %></th>
      </tr>
    </thead>
    <tbody>
       <%= render @instructores %>
    </tbody>
  </table>
</div>
<tr>
    <td><%= link_to 'Nuevo Instructor', new_instructor_path, :remote => true, :class => 'btn btn-primary' %></td>
    </tr>
<br />  
<br /> 
<div align="center"> 
 <%= will_paginate @instructores, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
</div> 
<p> 
 Total de Intructores : <%= @instructores.total_entries %> 
</p>
<hr>
Seleccione numero de registros por pagina:
<br>
<form id="myform" method='GET' action='instructores' >
  <select name='limit' onchange='actualizar();'>
    <option value = '2'></option>
    <option value = '2'>2</option>
    <option value = '4'>4</option>
    <option value = '6'>6</option>
  </select>
</form>
