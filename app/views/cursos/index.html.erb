<%- model_class = Curso -%>
<div class="page-header">
  <h1 class="titprincipal">Cursos</h1>
  <br>
</div>
<div id="obus">
    <%= form_tag request.path, :method => 'get' do %> 
     <%= content_tag :label do %> 
       Nombre Curso: 
       <%= text_field_tag :search, params[:search] %> 
       <i class="icon-search"></i>
       <%= submit_tag "Consultar", :name => nil %> 
     <% end %> 
    <% end %>
  </div>
  <br>
  <div id="opag">
    <%= form_tag request.path, :method => 'get' do %> 
      <%= content_tag :label do %> 
       Seleccione numero de registros por pagina:
       <br>
        <%= text_field_tag :limit, params[:limit] , :id=>'num'%> 
        <%= submit_tag "Aceptar", :name => nil %> 
      <% end %> 
    <% end %>
  </div>
  <div class="well" id="tablas">
<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'ficha' %></th>
      <th><%= sortable 'nombre' %></th>
    </tr>
  </thead>
  <tbody>
     <%= render @cursos %>
  </tbody>
</table>
</div>
