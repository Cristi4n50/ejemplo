<%- model_class = Materia -%>
<div class="page-header">
  <h1 class="titprincipal">Materias</h1>
  <hr>
  <br>
  <%= form_tag request.path, :method => 'get' do %> 
   <%= content_tag :label do %> 
     Nombre Materia: 
     <%= text_field_tag :search, params[:search] %> 
     <%= submit_tag "Consultar", :name => nil %> 
   <% end %> 
  <% end %>
</div>
<div class="well" id="tablas">
  <table class="table table-striped table-bordered table-condensed pretty">
    <thead>
      <tr>
          <th><%= sortable 'id' %></th>
          <th><%= sortable 'nombre' %></th>
          <th></th>
      </tr>
    </thead>
    <tbody>
       <%= render @materias %>
    </tbody>
  </table>
</div>
<%= link_to 'Nueva Materia', new_materia_path, :remote => true, :class => 'btn btn-info' %>
<hr>
Seleccione numero de registros por pagina:
<br>
<form id="myform" method='GET' action='materias' >
  <select name='limit' onchange='actualizar();'>
    <option value = '2'></option>
    <option value = '2'>2</option>
    <option value = '4'>4</option>
    <option value = '6'>6</option>
  </select>
</form>
