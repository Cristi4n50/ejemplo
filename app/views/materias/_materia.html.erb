<tr id=<%= "materia_#{materia.id}" %>>
  <td><%= link_to materia.id, edit_materia_path(materia), :remote => true %></td>
  <td><%= materia.nombre %></td>
  <td>
    <%= link_to image_tag('mostrar.png', :width=>30, :title=>'Mostrar'), materia, :remote => true, :class => 'btn btn-success btn-mini' %>
    <%= link_to image_tag('editar.png', :width=>30, :title=>'Editar'), edit_materia_path(materia), :remote => true,
        :class => 'btn btn-mini' %>
    <%= link_to image_tag('eliminar.png', :width=>30, :title=>'Eliminar'), materia, 
        :data => { :confirm => 'Esta Seguro?' },
        :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>